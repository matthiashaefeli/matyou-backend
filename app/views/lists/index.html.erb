<%= render template: 'navbar/index' %>
<h1>My Link List</h1>
<br>
<%= link_to 'New List', new_list_path %>
<br>
<%= render template: 'search/index', locals: { path: 'lists_path' } %>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.title, list %></td>
        <td>
          <%= link_to edit_list_path(list) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to list, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render template: 'pagination/index', locals: { path: 'lists_path' } %>
