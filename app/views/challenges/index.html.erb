<%= render template: 'navbar/index' %>
<h1>Challenges</h1>
<br>
<%= link_to 'New Challenge', new_challenge_path %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= link_to challenge.title, challenge %></td>
        <td><%= link_to challenge.url, challenge.url, target: '_blank' %></td>
        <td>
          <%= link_to edit_challenge_path(challenge) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to challenge, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render template: 'pagination/index', locals: { path: 'challenges_path' } %>
