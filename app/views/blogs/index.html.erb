<%= render template: 'navbar/index' %>
<h1>Blogs</h1>
<br>
<%= link_to 'New Blog', new_blog_path %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog %></td>
        <td><%= link_to blog.url, blog.url, target: '_blank' %></td>
        <td>
          <%= link_to edit_blog_path(blog) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to blog, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render template: 'pagination/index', locals: { path: 'blogs_path' } %>
