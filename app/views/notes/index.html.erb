<%= render template: 'navbar/index' %>
<h1>Notes</h1>
<br>
<%= link_to 'New Note', new_note_path %>
<br>
<%= render template: 'search/index', locals: { path: 'notes_path' } %>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render template: 'pagination/index', locals: { path: 'notes_path' } %>
