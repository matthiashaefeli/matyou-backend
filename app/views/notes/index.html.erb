<%= render template: 'navbar/index' %>
<h1>Notes</h1>
<br>
<%= link_to 'New Note', new_note_path %>
<br>
<%= render template: 'search/index', locals: { path: 'notes_path' } %>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, note %></td>
        <td>
          <%= link_to edit_note_path(note) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to note, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render template: 'pagination/index', locals: { path: 'notes_path' } %>
