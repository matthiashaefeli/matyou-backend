<%= render template: 'navbar/index' %>
<h1>Books</h1>
<br>
<%= link_to 'New Book', new_book_path %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'first page |', books_path %>
<%= link_to 'prev page |', books_path(page: @page - 1) if @page > 0 %>
<b>Page:<%= @page %></b> |
<%= link_to 'next page', books_path(page: @page + 1) %>
<%= link_to '| show all', books_path(show_all: true) unless @show_all %>
