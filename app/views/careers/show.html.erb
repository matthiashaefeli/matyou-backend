<%= form_with(url: send_email_careers_path(id: @career.id), method: "post") do |form| %>
  <%= form.text_field :email, placeholder: 'My Email' %>
  <%= form.submit "Send" %>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @career.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @career.body %>
</p>

<p><strong>Comments</strong></p>

<ul>
  <% @career.comments.each do |comment| %>
    <li><%= comment.body %> <%= link_to 'Delete', comment_path(comment), method: :delete %></li>
  <% end %>
</ul>

<%= render 'comments/form', comment: @comment %>

<%= link_to 'Edit', edit_career_path(@career) %> |
<%= link_to 'Back', careers_path %>
