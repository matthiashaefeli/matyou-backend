<%= render template: 'navbar/index' %>
<h1>CMD</h1>
<br>
<%= link_to 'New CMD', new_career_path %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @careers.each do |career| %>
      <tr>
        <td><%= link_to career.title, career %></td>
        <td>
          <%= link_to edit_career_path(career) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to career, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render template: 'pagination/index', locals: { path: 'careers_path' } %>
